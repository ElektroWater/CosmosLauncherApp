<Window x:Class="CosmosLauncherApp.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmosLauncherApp"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:Cosmos="clr-namespace:CosmosLauncherApp.Components"
        mc:Ignorable="d"
        Title="Message" Height="100" Width="350" Background="#7E00CC" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Cosmos:ButtonControl Icon="Information" Text="Ok" Margin="0,0,10,10" HorizontalAlignment="Right" MouseDown="Button_Click" VerticalAlignment="Bottom"/>
        <Label x:Name="Message_Label" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
