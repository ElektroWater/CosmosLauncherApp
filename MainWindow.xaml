<Window x:Name="Window" x:Class="CosmosLauncherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmosLauncherApp"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Cosmos Battle Royale" Height="450" Width="800" Icon="/img/Logo.png" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="img/Background.png"></ImageBrush>
    </Window.Background>
    <Grid x:Name="Fenetre">
        <Button Content="Lancer Fortnite" Margin="0,370,0,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Center"/>
        <TextBox x:Name="Folder_Label" HorizontalAlignment="Left" Margin="55,320,0,0" TextWrapping="Wrap" Width="658" Height="32" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" IsReadOnly="True"/>
        <Button x:Name="Folder_btn" Content="..." Margin="0,320,55,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="27" Click="Folder_btn_Click"/>

        <Button Content="Vérifier les mises à jours" Margin="55,370,0,0" VerticalAlignment="Top" Click="Update_btn_Click"/>
        <Button x:Name="Discord_btn" Content="Discord" Margin="589,370,0,0" VerticalAlignment="Top" Click="Discord_btn_Click" Height="32"/>
        <Label Content="Version 1.0.0" HorizontalAlignment="Left" Margin="740,402,0,0" FontSize="10" Height="13" VerticalAlignment="Top"/>
        <Button x:Name="Help_btn" Content="Aide" Margin="225,370,0,0" VerticalAlignment="Top" Click="Help_btn_Click"/>
        <Button x:Name="Settings_btn" Content="Paramètres" Margin="659,370,0,0" VerticalAlignment="Top" Click="Settings_btn_Click"/>
    </Grid>
</Window>
