<Window x:Class="CosmosLauncherApp.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmosLauncherApp"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:Cosmos="clr-namespace:CosmosLauncherApp.Components"
        mc:Ignorable="d" BorderThickness="0"
        Title="Mise à jour disponible !" Background="#FF9C00FF" Height="150" Width="360" WindowStartupLocation="CenterScreen" ShowInTaskbar="True" ResizeMode="NoResize" Icon="/img/Logo.png">
    <Grid>
        <Label Content="Une mise à jour du Lanceur Cosmos est disponible " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -30 0 0"/>
        <Label Content="Vous devez mettre à jour pour utiliser Cosmos" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Cosmos:ButtonControl Text="Mettre à jour" Icon="Update" Margin="0,0,10,15" VerticalAlignment="Bottom" HorizontalAlignment="Right" MouseDown="Update_btn_Click"/>
    </Grid>
</Window>
