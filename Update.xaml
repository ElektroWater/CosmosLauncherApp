<Window x:Class="CosmosLauncherApp.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmosLauncherApp"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Mise à jour disponible !" Height="200" Width="360" WindowStartupLocation="CenterScreen" ShowInTaskbar="True" ResizeMode="NoResize" Icon="/img/Logo.png">
    <Window.Background>
        <ImageBrush ImageSource="img/Bannier_V1_SANS_DSC.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="Update_btn" Content="Mettre à jour" Margin="251,0,0,15" VerticalAlignment="Bottom" Click="Update_btn_Click"/>
        <Button x:Name="Ignore_btn" Content="Ignorer" Margin="183,0,0,15" VerticalAlignment="Bottom" Click="Ignore_btn_Click"/>

    </Grid>
</Window>
